<!DOCTYPE html>
<html>

<head>
  <meta http-equiv="Content-Type" const="text/html;charset=UTF-8" />
  <link href="http://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet" type="text/css">
  <link rel="stylesheet" type="text/css" href="style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.14.1/css/mdb.min.css" rel="stylesheet">
  <title>Simple MDB Chat App</title>
</head>


<body>
  <div class="alert text-center alert-primary" role="alert">
   <h3>krishna's chat group</h3>
  </div>
  <div class="container mt-5">
    <section>
      <div id="change_username">
        <input id="username" type="text" />
        <button id="send_username" type="button">Change username</button>
      </div>
    </section>
    
    <div class="user-list" >
      <b>Users currently online</b>
      <div id="users">
          <p id="user"></p>
      </div>
  </div>
    <!-- Grid row -->
    <div class="row d-flex flex-row-reverse">

      <!-- Grid column -->
      <div class="col-md-12 mb-4 d-flex flex-row-reverse">
        <div class="card chat-room small-chat wide" id="myForm">
          <div class="card-header white d-flex justify-content-between p-2" id="toggle" style="cursor: pointer;">
            <div class="heading d-flex justify-content-start">
              <div class="profile-photo">
                <img src="/images/user.png" alt="avatar"
                  class="avatar rounded-circle mr-2 ml-0">
                <span class="state"></span>
              </div>
              <div class="data">
                <p class="name mb-0"><strong>Anonymus</strong></p>
                <p class="activity text-muted mb-0">Active now</p>
              </div>
            </div>
            <div class="icons grey-text">
              <a class="feature"><i class="fas fa-video mr-2"></i></a>
              <a class="feature"><i class="fas fa-phone mr-2"></i></a>
              <a class="feature"><i class="fas fa-cog mr-2"></i></a>
              <a id="closeButton"><i class="fas fa-times mr-2"></i></a>
            </div>
          </div>
          <div class="my-custom-scrollbar">
            <div class="card-body p-3">
              <div class="chat-message">
                
                <div id="chatroom">
                </div>
                <section id="feedback"></section>

              </div>
            </div>
          </div>
          <div class="card-footer text-muted white pt-1 pb-2 px-3">
            <div class="container">
              <div class="row">
                <div class="col-8 input-box"> <input type="text" id="message" class="form-control" placeholder="Type a message..."></div>
                <div class="col-4 ">   
                   <button type="button" class="btn btn-success">Send</button>
                </div>
              </div>
            </div>
           
        
            <div>
              <a><i class="far fa-file-image mr-2"></i></a>
              <a><i class="far fa-laugh mr-2"></i></a>
              <a><i class="fas fa-gamepad mr-2"></i></a>
              <a><i class="fas fa-paperclip mr-2"></i></a>
              <a><i class="fas fa-camera mr-2"></i></a>
             <!-- <a><i id="send_message" class="fas fa-envelope float-right"></i></a>  -->
            
              
            </div>
          </div>
        </div>
      </div>
      <!-- Grid column -->
    </div>
    <!-- Grid row -->
  </div>
  <!-- JQuery -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js">
  </script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.14.1/js/mdb.min.js"></script>
  <script src="chat.js"></script>
</body>
</html>